<!-- Include the shared header partial (navigation, logo, etc.) -->
<%- include('partials/header') %>

<!-- Wrapper for styling and layout -->
<div class="form-wrapper">
  <div class="form-container">

    <!-- Login heading and message -->
    <h2>Welcome Back</h2>
    <p>Please login to continue your Shelf Life journey ðŸ“š</p>

    <!-- Login form -->
    <form action="/login" method="POST">
      <!-- Username input field -->
      <label for="username">Username</label>
      <input type="text" id="username" name="username" required>

      <!-- Password input field -->
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required>

      <!-- Submit button -->
      <button type="submit" class="btn-primary">Login</button>
    </form>

    <!-- Redirect for users who need to sign up -->
    <p class="signup-redirect">Don't have an account? <a href="/signup">Sign up here</a></p>
    <% if (typeof warning != "undefined") { %>
        <h4 class="signup-redirect" style="color: red;"><%=warning%></h4>
    <% } %>

  </div>
</div>

<!-- Include the shared footer partial (credits, footer links, etc.) -->
<%- include('partials/footer') %>